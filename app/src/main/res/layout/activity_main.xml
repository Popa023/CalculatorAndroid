<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="+/-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/sign" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/button0"
            app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/punct"
            app:layout_constraintStart_toEndOf="@+id/sign" app:layout_constraintDimensionRatio="w,1:1.2"
            android:layout_marginEnd="3dp"/>
    <Button
            android:text="."
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/punct" app:layout_constraintEnd_toStartOf="@+id/ecual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button0" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/ecual" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/punct" app:layout_constraintDimensionRatio="1.2:1"
    />
    <Button
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button1"
            app:layout_constraintBottom_toTopOf="@+id/sign" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button2"
            app:layout_constraintBottom_toTopOf="@+id/sign" app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toEndOf="@+id/button1" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button3"
            app:layout_constraintBottom_toTopOf="@+id/punct" app:layout_constraintEnd_toStartOf="@+id/plus"
            app:layout_constraintStart_toEndOf="@+id/button2" app:layout_constraintDimensionRatio="1.2:1"
    />
    <Button
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/plus"
            app:layout_constraintBottom_toTopOf="@+id/ecual" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button4"
            app:layout_constraintBottom_toTopOf="@+id/button1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button5" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button5"
            app:layout_constraintBottom_toTopOf="@+id/button2" app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button4" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button6"
            app:layout_constraintBottom_toTopOf="@+id/button3" app:layout_constraintEnd_toStartOf="@+id/minus"
            app:layout_constraintStart_toEndOf="@+id/button5" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/minus"
            app:layout_constraintBottom_toTopOf="@+id/plus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button6" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button4" app:layout_constraintEnd_toStartOf="@+id/button8"
            app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button8"
            app:layout_constraintBottom_toTopOf="@+id/button5"
            app:layout_constraintStart_toEndOf="@+id/button7" app:layout_constraintEnd_toStartOf="@+id/button9"
            app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button9"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintStart_toEndOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/multypli"
            app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/multypli"
            app:layout_constraintBottom_toTopOf="@+id/minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button9" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="C"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/erase"
            app:layout_constraintBottom_toTopOf="@+id/button7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/brackets" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="( )"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/brackets"
            app:layout_constraintBottom_toTopOf="@+id/button8" app:layout_constraintEnd_toStartOf="@+id/procent"
            app:layout_constraintStart_toEndOf="@+id/erase" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/procent" app:layout_constraintEnd_toStartOf="@+id/divide"
            app:layout_constraintBottom_toTopOf="@+id/button9"
            app:layout_constraintStart_toEndOf="@+id/brackets" app:layout_constraintDimensionRatio="1.2:1"/>
    <Button
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/divide" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/multypli"
            app:layout_constraintStart_toEndOf="@+id/procent" app:layout_constraintDimensionRatio="1.2:1"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/resault"
            app:layout_constraintBottom_toTopOf="@+id/procent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintDimensionRatio="5:1"/>
</android.support.constraint.ConstraintLayout>